# KP_Enter
#       pamixer --toggle-mute




# Volume control

XF86AudioRaiseVolume
      ~/my-scripts/volume-control.sh up 

XF86AudioLowerVolume
      ~/my-scripts/volume-control.sh down 

XF86AudioMute
      ~/my-scripts/volume-control.sh toggle 
	
